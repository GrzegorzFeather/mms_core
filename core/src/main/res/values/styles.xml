<resources>

    <style name="Theme.MMS" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/mmsPrimaryDark</item>
        <item name="colorPrimary">@color/mmsPrimary</item>
        <item name="colorAccent">@color/mmsAccent</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="ThemeOverlay.MMS.ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="ThemeOverlay.MMS.Light" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:windowActionBarOverlay">true</item>
    </style>

</resources>
